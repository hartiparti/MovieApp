
@model List<MovieApp.Models.ViewModels.MovieViewModel>
@{
    ViewData["Title"] = "Movies";
}

<div>
<h1>Movies</h1>
<table>
    <tr>
        <th>Movie title</th>
        <th>Genre</th>
        <th>Rating</th>      
    </tr>
    @foreach(var movie in Model)
    {
        <tr>
            <td><a  asp-controller="Movies" 
                    asp-action="Details" 
                    asp-route-id="@movie.Id">@movie.Title</a></td>
            <td>@movie.Genre</td>
            <td>@movie.Rating</td>
           
        </tr>   
    }

</table>
<a class="btn btn-primary" asp-controller="Movies" asp-action="Create">Add movie!</a>

</div>